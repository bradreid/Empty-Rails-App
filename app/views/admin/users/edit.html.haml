.page-header
  %h1
    =image_tag(@user.facebook_avatar_url) if @user.facebook_avatar_url.present?  
    Edit user account
    %small
      =@user.display_name
    .btn-group.pull-right
      = link_to admin_index_path, :class => 'btn' do
        %i.icon-arrow-left
        Back to Admin 
      = link_to admin_users_path, :class => 'btn' do
        %i.icon-arrow-left
        Back to Users             

= form_for [:admin, @user], :builder => AppFormBuilder do |f| 
  = render :partial => 'form', :locals => {:f => f, :text => 'Update User!'}
  =link_to "Cancel", admin_users_path, :class => 'btn btn-danger'